<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/outgoing_coordinator_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/outgoing_settings"
                style="@style/AccountSetupTitle"
                android:layout_marginLeft="@dimen/account_setup_settings_margin_start"
                android:layout_marginStart="@dimen/account_setup_settings_margin_start"
                android:layout_marginTop="@dimen/account_setup_settings_title_margin_top"
                />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingTop="6dp"
                android:paddingBottom="10dp"
                android:layout_marginTop="@dimen/account_setup_margin_below_title_incoming_and_outgoing"
                android:layout_marginLeft="@dimen/account_setup_settings_margin_start"
                android:layout_marginStart="@dimen/account_setup_settings_margin_start"
                android:layout_marginRight="@dimen/account_setup_settings_field_margin_end"
                android:layout_marginEnd="@dimen/account_setup_settings_field_margin_end"
                android:clipToPadding="false"
                android:fadingEdge="none"
                android:overScrollMode="ifContentScrolls"
                android:scrollbarStyle="outsideInset">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/outgoing_account_server_layout"
                        app:layout_constraintTop_toBottomOf="@id/title"
                        app:layout_constraintLeft_toLeftOf="@id/title"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="?android:attr/textColorPrimary">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/outgoing_account_server"
                            android:singleLine="true"
                            android:inputType="textUri"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:hint="@string/account_setup_outgoing_smtp_server_label" />
                    </android.support.design.widget.TextInputLayout>

                    <TextView
                        android:id="@+id/account_setup_outgoing_security_label"
                        android:text="@string/account_setup_outgoing_security_label"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="@dimen/account_setup_margin_between_items_incoming_and_outgoing"
                        app:layout_constraintTop_toBottomOf="@id/outgoing_account_server_layout"
                        app:layout_constraintLeft_toLeftOf="@id/outgoing_account_server_layout"
                        app:layout_constraintRight_toRightOf="@id/outgoing_account_server_layout"
                        style="@style/InputLabel"
                        android:textColor="?android:attr/textColorPrimary" />

                    <Spinner
                        android:id="@+id/outgoing_account_security_type"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        app:layout_constraintTop_toBottomOf="@id/account_setup_outgoing_security_label"
                        app:layout_constraintLeft_toLeftOf="@id/outgoing_account_server_layout"
                        app:layout_constraintRight_toRightOf="@id/outgoing_account_server_layout"
                        android:contentDescription="@string/account_setup_outgoing_security_label" />

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/outgoing_account_port_layout"

                        app:layout_constraintTop_toBottomOf="@id/outgoing_account_security_type"
                        app:layout_constraintLeft_toLeftOf="@id/outgoing_account_server_layout"
                        app:layout_constraintRight_toRightOf="@id/outgoing_account_server_layout"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/account_setup_margin_between_items_incoming_and_outgoing"
                        android:textColorHint="?android:attr/textColorPrimary">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/outgoing_account_port"
                            android:singleLine="true"
                            android:inputType="number"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:hint="@string/account_setup_outgoing_port_label" />
                    </android.support.design.widget.TextInputLayout>

                    <CheckBox
                        android:id="@+id/account_require_login"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/account_setup_margin_between_items_incoming_and_outgoing"

                        app:layout_constraintTop_toBottomOf="@id/outgoing_account_port_layout"
                        app:layout_constraintLeft_toLeftOf="@id/outgoing_account_server_layout"
                        app:layout_constraintRight_toRightOf="@id/outgoing_account_server_layout"

                        android:text="@string/account_setup_outgoing_require_login_label" />
                    <LinearLayout
                        android:id="@+id/account_require_login_settings"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:visibility="gone">
                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/outgoing_account_username_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColorHint="?android:attr/textColorPrimary"
                            android:layout_marginTop="@dimen/account_setup_margin_between_items_incoming_and_outgoing"

                            app:layout_constraintTop_toBottomOf="@id/account_require_login"
                            app:layout_constraintLeft_toLeftOf="@id/outgoing_account_server_layout"
                            app:layout_constraintRight_toRightOf="@id/outgoing_account_server_layout"
                            >
                            <android.support.design.widget.TextInputEditText
                                android:id="@+id/outgoing_account_username"
                                android:singleLine="true"
                                android:inputType="textEmailAddress"
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"
                                android:textColor="#333333"
                                android:hint="@string/account_setup_outgoing_username_label" />
                        </android.support.design.widget.TextInputLayout>

                        <TextView
                            android:id="@+id/account_setup_outgoing_authentication_label"
                            android:text="@string/account_setup_outgoing_authentication_label"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:layout_marginTop="@dimen/account_setup_margin_between_items_incoming_and_outgoing"
                            style="@style/InputLabel"

                            app:layout_constraintTop_toBottomOf="@id/outgoing_account_username_layout"
                            app:layout_constraintLeft_toLeftOf="@id/outgoing_account_server_layout"
                            app:layout_constraintRight_toRightOf="@id/outgoing_account_server_layout"
                            android:textColor="?android:attr/textColorPrimary" />

                        <Spinner
                            android:id="@+id/outgoing_account_auth_type"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            app:layout_constraintTop_toBottomOf="@id/account_setup_outgoing_authentication_label"
                            app:layout_constraintLeft_toLeftOf="@id/outgoing_account_server_layout"
                            app:layout_constraintRight_toRightOf="@id/outgoing_account_server_layout"
                            android:contentDescription="@string/account_setup_outgoing_authentication_label" />

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/outgoing_account_password_layout"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:layout_marginTop="@dimen/account_setup_margin_between_items_incoming_and_outgoing"
                            android:textColorHint="?android:attr/textColorPrimary"
                            app:layout_constraintTop_toBottomOf="@id/outgoing_account_auth_type"
                            app:layout_constraintLeft_toLeftOf="@id/outgoing_account_server_layout"
                            app:layout_constraintRight_toRightOf="@id/outgoing_account_server_layout"
                            >
                            <android.support.design.widget.TextInputEditText
                                android:id="@+id/outgoing_account_password"
                                android:singleLine="true"
                                android:inputType="textPassword"
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"
                                android:hint="@string/account_setup_outgoing_password_label" />

                        </android.support.design.widget.TextInputLayout>

                        <TextView
                            android:id="@+id/account_client_certificate_label"
                            android:text="@string/account_setup_incoming_client_certificate_label"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            style="@style/InputLabel"
                            android:layout_marginTop="@dimen/account_setup_margin_between_items_incoming_and_outgoing"
                            app:layout_constraintTop_toBottomOf="@id/outgoing_account_password_layout"
                            app:layout_constraintLeft_toLeftOf="@id/outgoing_account_server_layout"
                            app:layout_constraintRight_toRightOf="@id/outgoing_account_server_layout"
                            android:textColor="?android:attr/textColorPrimary"
                            android:visibility="gone" />

                        <org.atalk.xryptomail.view.ClientCertificateSpinner
                            android:id="@+id/outgoing_account_client_certificate_spinner"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            app:layout_constraintTop_toBottomOf="@id/account_client_certificate_label"
                            app:layout_constraintLeft_toLeftOf="@id/outgoing_account_server_layout"
                            app:layout_constraintRight_toRightOf="@id/outgoing_account_server_layout"
                            android:visibility="gone" />
                    </LinearLayout>
                </LinearLayout>

            </ScrollView>
        </LinearLayout>

    </android.support.design.widget.CoordinatorLayout>
    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/dividerHorizontal" />

    <LinearLayout
        style="?android:attr/buttonBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/outgoing_next"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selectable_item_background"
            android:text="@string/next_action" />
    </LinearLayout>

</LinearLayout>
